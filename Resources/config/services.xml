<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="supervisor.manager" class="YZ\SupervisorBundle\Manager\SupervisorManager">
            <argument>%supervisor.servers%</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        <service id="supervisor.controller" class="YZ\SupervisorBundle\Controller\SupervisorController">
            <call method="setLogger">
                <argument type="service" id="logger" />
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <tag name="monolog.logger" channel="supervisor"/>
        </service>
    </services>
</container>
